<?xml version="1.0" encoding="ISO-8859-1" ?>
 
<!DOCTYPE tiles-definitions PUBLIC 
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<!-- Definitions for Tiles documentation   -->

<tiles-definitions>

	<!-- 인식 : 타일즈 프레임 -->
	<definition name="template" template="/WEB-INF/view/layout/template.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp" />
		<put-attribute name="sub_menu" value="/WEB-INF/view/layout/sub_menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
	</definition>
	<definition name="*.tiles" extends="template">
		<put-attribute name="body" value="/WEB-INF/view/{1}.jsp"/>
	</definition>
	<definition name="faq/*.tiles" extends="template">
		<put-attribute name="body" value="/WEB-INF/view/faq/{1}.jsp"/>
	</definition>
	<definition name="qna/*.tiles" extends="template">
		<put-attribute name="body" value="/WEB-INF/view/qna/{1}.jsp"/>
	</definition>
	<!-- 인식 : 타일즈 프레임 -->
	
	
	<!-- 맛집정보 화면에서 템플릿:지훈이코드 -->
	<definition name="restaurant_template" template="/WEB-INF/view/layout/template.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp" />
		<put-attribute name="sub_menu" value="/WEB-INF/view/restaurant/restaurant_sidemenu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
	</definition>
	
	<definition name="restaurant/*.tiles" extends="restaurant_template">
		<put-attribute name="body" value="/WEB-INF/view/restaurant/{1}.jsp"/>
	</definition>
	<!-- 여기까지 지훈이코드 -->
	
	
	<!-- 맛집리뷰 : 코스타 롤 대장 -->
	<definition name="template_no_submenu" template="/WEB-INF/view/layout/template_no_submenu.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
	</definition>
	<definition name="review_template" template="/WEB-INF/view/layout/template_no_submenu.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
	</definition>
	<definition name="*.tiles" extends="template_no_submenu">
		<put-attribute name="body" value="/WEB-INF/view/{1}.jsp"/>
	</definition>
	
	<definition name="review/*.tiles" extends="template_no_submenu">
		<put-attribute name="body" value="/WEB-INF/view/review/{1}.jsp"/>
	</definition>
	<!-- 맛집리뷰 끝 -->
	
	
	<!-- 메인페이지:달이 -->
 	<definition name="main_template" template="/WEB-INF/view/layout/main_template.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp" />
		<put-attribute name="aside_menu" value="/WEB-INF/view/layout/aside_menu.jsp" />
		<put-attribute name="right_menu" value="/WEB-INF/view/layout/right_menu.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
	</definition>
	<definition name="*.tiles" extends="main_template">
